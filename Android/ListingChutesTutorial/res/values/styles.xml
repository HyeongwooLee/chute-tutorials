<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textLargeOrange" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="textSmallOrange" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="textMediumBlack" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black_comments</item>
    </style>
    
    <style name="textSmallBlack" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/black_comment</item>
    </style>
    
    <style name="textChuteName" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">20dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black_chute_name</item>
    </style>
    
     <style name="textChutePhotoCount" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">13dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:textColor">@color/grey_number_of_photos</item>
    </style>
    
    <style name="buttonTabs" parent="android:Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/blue_upload</item>
    </style>
    
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
     <style name="themePhotoMenu" parent="@android:style/Theme.Light.Panel">
            <item name="android:windowBackground">@color/transparent</item>
     </style>
     
      <style name="buttonMenuGray"  parent="android:Widget.Button">
          <item name="android:background">@drawable/selector_button_gray</item>
         <item name="android:layout_marginLeft">10dp</item>
          <item name="android:layout_marginRight">10dp</item>
          <item name="android:layout_marginTop">5dp</item>
          <item name="android:layout_marginBottom">5dp</item>
          <item name="android:paddingLeft">5dp</item>
           <item name="android:paddingRight">5dp</item>
          <item name="android:textColor">@color/black</item>
     </style>
</resources>