<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Create a Chute"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnChuteBasic"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Basic Chute" />

        <Button
            android:id="@+id/btnChutePassword"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Chute with Password" />

        <Button
            android:id="@+id/btnChutePermissions"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Chute with Different Permissions" />
    </LinearLayout>

</RelativeLayout>